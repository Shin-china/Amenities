                        <Text id="txtCol6" text="{tab1_col06}" wrapping="false"/>
                    </table:template>
                    <table:label>
                        <Label id="lblCol6" text="{i18n>tab1_col06}" />
                    </table:label>
                </table:Column>

                <table:Column id="col7">
