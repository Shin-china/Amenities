                    </table:template>
                    <table:label>
                        <Label id="lblCol15" text="{i18n>tab1_col15}" />
                    </table:label>
                </table:Column>

                <table:Column id="col16">
                    <table:template>
                        <Text id="txtCol16" text="{tab1_col16}" wrapping="false"/>
                    </table:template>
                    <table:label>
                        <Label id="lblCol16" text="{i18n>tab1_col16}" />
                    </table:label>
                </table:Column>
            </table:columns>
        </table:Table>
    </f:content>
</f:DynamicPage>
</mvc:View>