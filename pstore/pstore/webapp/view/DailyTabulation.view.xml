<mvc:View xmlns:smartfilterbar="sap.ui.comp.smartfilterbar" xmlns:uxap="sap.uxap"
	controllerName="com.shin.pstore.pstore.controller.DailyTabulation"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:table="sap.ui.table" 
    xmlns:f="sap.f" 
	xmlns:c="sap.ui.core"
	displayBlock="true"

	height="100%"
	busyIndicatorDelay="0"
>
<f:DynamicPage id="dynamicPage1">
    <f:header>

        <f:DynamicPageHeader id="pageHeader">
            <f:content>
                <smartfilterbar:SmartFilterBar id="dailyFilter" entitySet=""></smartfilterbar:SmartFilterBar>
            </f:content>
        </f:DynamicPageHeader>
    </f:header>

    <f:content>
        <table:Table id="table1" 
        enableColumnFreeze="true" 
        enableGrouping="true" 
        enableCustomFilter="true" 
        enableBusyIndicator="true"
        
        rows="{/StoreSet}"
        visibleRowCount="50"
        rowActionCount="1"
        
        class="sapFDynamicPageAlignContent"
        >

        <table:rowActionTemplate>
            <table:RowAction id="tab1RowAction">
                <table:items>
                    <table:RowActionItem id="tab1RowActionItem" type="Navigation" icon="sap-icon://navigation-right-arrow" press="onNavigate"/>
                </table:items>
            </table:RowAction>
        </table:rowActionTemplate>

        <table:extension>
            <OverflowToolbar id="tableToolBar">
                <content>
                    <ToolbarSpacer id="toolbarSpacer" />
                    <Button id="btnShowAddDialog" text="{i18n>tab1_btn01}" type="Transparent" press="onShowAddDialog"/>
                    <Button id="btnShowCopyDialog" text="{i18n>tab1_btn02}" type="Transparent" press="onShowCopyDialog"/>
                    <Button id="btnShowDeleteDialog" text="{i18n>tab1_btn03}" type="Attention" press="onShowDeleteDialog"/>
                    <Button id="btnShowGenerateDialog" text="{i18n>tab1_btn04}" type="Transparent" press="onShowGenerateDialog"/>
                    <Button id="btnExportPdf" text="{i18n>tab1_btn05}" type="Transparent" press="onExportPdf"/>
                </content>
            </OverflowToolbar>
        </table:extension>

            <table:columns>
                <table:Column id="col1">
                    <table:template>
                        <Text id="txtCol1" text="{KihyoNo}"  wrapping="false"/>
                    </table:template>
                    <table:label>
                        <Label id="lblCol1" text="{i18n>tab1_col01}" />
                    </table:label>
                </table:Column>

                <table:Column id="col2">
                    <table:template>
                        <Text id="txtCol2" text="{KaishaCd}" wrapping="false" />
                    </table:template>
                    <table:label>
                        <Label id="lblCol2" text="{i18n>tab1_col02}" />
                    </table:label>
                </table:Column>

                <table:Column id="col3">
                    <table:template>
                        <Text id="txtCol3" text="{KaishaNm}" wrapping="false" />
                    </table:template>
                    <table:label>
                        <Label id="lblCol3" text="{i18n>tab1_col03}" />
                    </table:label>
                </table:Column>
                
                <table:Column id="col4">
                    <table:template>

                          <Text id="txtCol4" text="{
                                    path: 'EigyoBi',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                    pattern: 'yyyy/MM/dd'
                                    }
                                }" />            

                    </table:template>
                    <table:label>
                        <Label id="lblCol4" text="{i18n>tab1_col04}" />
                    </table:label>
                </table:Column>

                <table:Column id="col5">
                    <table:template>
                        <Text id="txtCol5" text="{tab1_col05}" wrapping="false"/>
                    </table:template>
                    <table:label>
                        <Label id="lblCol5" text="{i18n>tab1_col05}" />
                    </table:label>
                </table:Column>

                <table:Column id="col6">
