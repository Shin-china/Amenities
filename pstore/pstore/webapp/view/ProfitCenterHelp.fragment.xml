<c:FragmentDefinition xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:c="sap.ui.core">
    <Dialog id="selPrctrDialog" contentWidth="50%" resizable="true" title="{i18n>tab3_col1}">
        <beginButton>
            <Button id="btnSelect" text="{i18n>select}" type="Emphasized" press="onAddStore" />
        </beginButton>

        <content>
            <table:Table id="tabPrctr" rows="{local>/PrctrSet}" selectionMode="Single">
                <table:columns>
                    <table:Column id="tabPrctrCol1">
                        <Label id="lblPrctrCol1" text="{i18n>tab3_col1}" />
                        <table:template>
                            <Text id="txtPrctrCol1" text="{local>Prctr}" />
                        </table:template>
                    </table:Column>

                    <table:Column id="tabPrctrCol2">
                        <Label id="lblPrctrCol2" text="{i18n>description}" />
                        <table:template>
                            <Text id="txtPrctrCol2" text="{local>Ktext}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
        <endButton>
            <Button id="btnClose" text="{i18n>cancel}" type="Transparent" press="onCloseAddDialog" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
