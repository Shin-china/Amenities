<c:FragmentDefinition xmlns="sap.m" xmlns:c="sap.ui.core">
    <Dialog id="generateDialog" contentWidth="30%" title="{i18n>confirm_title}">
        <beginButton>
            <Button id="btnGenerate" text="{i18n>yes}" type="Emphasized" press="onGenerateDoc" />
        </beginButton>

        <content>
            <HBox id="hbox" class="sapUiMediumMargin">
                <items>
                    <Text id="alertContent" text="{i18n>generate_doc_confirm}"></Text>
                </items>
            </HBox>
        </content>

        <endButton>
            <Button id="btnCloseGenerate" text="{i18n>no}" type="Transparent" press="onCloseGenerateDialog" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
