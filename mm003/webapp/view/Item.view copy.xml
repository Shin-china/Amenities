<mvc:View 
        controllerName="mm003.controller.Item"
		xmlns="sap.ui.table"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		xmlns:m="sap.m"
		height="100%" 
		xmlns:f="sap.f"
	    xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core"   
		xmlns:semantic="sap.m.semantic"
		xmlns:smartTable="sap.ui.comp.smarttable"
		displayBlock="true"
		xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		>
		<m:SplitApp
			id="SplitAppDemo"
			initialDetail="detail"
			initialMaster="master">
			<m:masterPages>
				<semantic:MasterPage id="_IDGenMasterPage1" title="すべてのタスク(1)">
					<semantic:subHeader>
						<m:Toolbar id="_IDGenToolbar1">
						<m:SearchField id="_IDGenSearchField1" width="100%" />
						</m:Toolbar>
					</semantic:subHeader>
					<semantic:content>
						<m:PullToRefresh
						id="pullToRefresh"
						refresh="handleRefresh" />
					</semantic:content>

					<m:List id="_IDGenList1" itemPress=".onListItemPress">
						<m:items>
							<m:StandardListItem id="_IDGenStandardListItem1" title="購買依頼" type="Active" custom:to="DetailPage1" />
							<m:StandardListItem id="_IDGenStandardListItem2" title="購買発注" type="Active" custom:to="DetailPage2" /> 
						</m:items>
					</m:List>			
					<smartTable:SmartTable id="smartTable" smartFilterId="smartFilterBar" enableExport="false" showRowCount="true" useVariantManagement="false" entitySet="ZzHeaderSet"
                    useTablePersonalisation="false" persistencyKey="salespriceTable" enableAutoBinding="false" placeToolbarInTable="true" beforeRebindTable="onBeforeRebindTable"
                    requestAtLeastFields="EBELN,TYPE,BUKRS,BSART,EKORG,EKGRP,LIFNR,WAERS,ERNAM,to_ZzItems"
                    class="sapUiThinyMarginTop">
						<t:Table id="reportTable" visibleRowCountMode="Auto" rowActionCount="1" selectionMode="None">
							<t:rowActionTemplate>
								<t:RowAction id="_IDGenRowAction1">
									<t:items>
										<t:RowActionItem id="_IDGenRowActionItem1" type="Navigation" press="onPressNavToDetail"/>
									</t:items>
								</t:RowAction>
							</t:rowActionTemplate>
							<t:columns>
								<t:Column id="_IDGenColumn1" width="8rem" sortProperty="EBELN">
									<t:customData>
										<core:CustomData key="p13nData" value='\{"columnKey":"EBELN", "leadingProperty":"EBELN", "sortProperty":"EBELN", "filterProperty": "EBELN"}'/>
									</t:customData>
									<t:template>
										<t:Text id="_IDGenText1" text="{EBELN}"/>
									</t:template>
								</t:Column>
								<t:Column id="_IDGenColumn2" width="6rem" sortProperty="TYPE">
									<t:customData>
										<core:CustomData key="p13nData" value='\{"columnKey":"TYPE", "leadingProperty":"TYPE", "sortProperty":"TYPE", "filterProperty": "TYPE"}'/>
									</t:customData>
									<t:template>
										<t:Text id="_IDGenText2" text="{TYPE}"/>
									</t:template>
								</t:Column>
							</t:columns>
                    	</t:Table>
                	</smartTable:SmartTable>


					<semantic:sort>
						<semantic:SortSelect id="_IDGenSortSelect1" change="onSemanticSelectChange" items="{ path: '/ProductCollectionStats/Filters', sorter: { path: 'Name' } }">
							<core:Item id="_IDGenItem1" key="{type}" text="{type}" />
						</semantic:SortSelect>
					</semantic:sort>
					<semantic:filter>
						<semantic:FilterAction id="_IDGenFilterAction1" press="onSemanticButtonPress"/>
					</semantic:filter>
					<semantic:group>
						<semantic:GroupAction id="_IDGenGroupAction1" press="onSemanticButtonPress"/>
					</semantic:group>
					<semantic:multiSelectAction>
						<semantic:MultiSelectAction id="_IDGenMultiSelectAction1" press="onMultiSelectPress"/>
					</semantic:multiSelectAction>
				</semantic:MasterPage>
			</m:masterPages>

			<m:detailPages>
			<semantic:DetailPage
			        id="DetailPage1"
					title="購買稟議承認">

					<form:SimpleForm id="_IDGenSimpleForm1" editable="true">
						<m:Label id="_IDGenLabel1" text="購買依頼："/>
						<m:Text id="getValue" text="XXXXX"/>
						<m:Label id="_IDGenLabel2" text="件名："/>
						<m:Text id="getProperty"
							text="{/InputValue}XXXXに関する購買"
						/>
					</form:SimpleForm>

					<m:IconTabBar
						id="idIconTabBarMulti"
						expanded="{device>/isNoPhone}"
						class="sapUiResponsiveContentPadding">
						<m:items>
							<m:IconTabFilter id="_IDGenIconTabFilter1" icon="sap-icon://hint" key="info">
								<m:content>
									<Table
										id="table"
										selectionMode="MultiToggle"
										rows="{/ProductCollection}"
										visibleRowCount="7"
										showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
										enableColumnFreeze="{ui>/showFreezeMenuEntry}"
										enableCellFilter="{ui>/enableCellFilter}"
										columnSelect="onColumnSelect"
										cellContextmenu="onProductIdCellContextMenu"
										ariaLabelledBy="title">

										<columns>
											<Column
												id="name"
												width="11rem"
												sortProperty="Name"
												filterProperty="Name"
												showFilterMenuEntry="true"
												showSortMenuEntry="true">
												<m:Label id="_IDGenLabel3" text="仕入先" />
												<template>
													<m:Text id="_IDGenText3" text="{Name}" wrapping="false" />
												</template>
											</Column>
											<Column id="productId" filterProperty="ProductId" sortProperty="ProductId" width="11rem">
												<m:Label id="_IDGenLabel4" text="税抜小計金額" />
												<template>
													<m:Text id="_IDGenText4" text="{ProductId}" wrapping="false" />
												</template>
											</Column>
											<Column id="image" width="11rem" columnMenuOpen="onColumnMenuOpen">
												<m:Label id="_IDGenLabel5" text="消費税(10%)" />
												<template>
													<m:Text id="_IDGenText5" text="{Show Image}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="quantity" width="11rem"  sortProperty="Quantity">
												<m:Label id="_IDGenLabel6" text="税込小計金額" />
												<template>
													<m:Text id="_IDGenText6" text="{quantity1}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn3" width="11rem">
												<m:Label id="_IDGenLabel7" text="税込見積小計" />
												<template>
													<m:Text id="_IDGenText7" text="{quantity2}" wrapping="false" /> 
												</template>
											</Column>
										</columns>
									</Table>
								</m:content>

								<m:content>
									<Table id="table2" selectionMode="MultiToggle" rows="{/ProductCollection}" visibleRowCount="7" showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
										enableColumnFreeze="{ui>/showFreezeMenuEntry}"
										enableCellFilter="{ui>/enableCellFilter}"
										columnSelect="onColumnSelect"
										cellContextmenu="onProductIdCellContextMenu"
										ariaLabelledBy="title">
										<extension>
											<m:OverflowToolbar id="_IDGenOverflowToolbar1" style="Clear">
												<m:Title id="title" text="明細"/>
												<m:ToolbarSpacer id="_IDGenToolbarSpacer1"/>
											</m:OverflowToolbar>
										</extension>

										<columns>
											<Column id="mx" width="6rem" sortProperty="mx" filterProperty="mx" showFilterMenuEntry="true" showSortMenuEntry="true">
												<m:Label id="_IDGenLabel8" text="明細" />
												<template>
													<m:Text id="_IDGenText8" text="{mx}" wrapping="false" />
												</template>
											</Column>
											<Column
												id="srx"
												filterProperty="srx"
												sortProperty="srx"
												width="6rem">
												<m:Label id="_IDGenLabel9" text="仕入先" />
												<template>
													<m:Text id="_IDGenText9" text="{srx}" wrapping="false" />
												</template>
											</Column>
											<Column
												id="dp"
												width="6rem"
												columnMenuOpen="onColumnMenuOpen">
												<m:Label id="_IDGenLabel10" text="店舗" />
												<template>
													<m:Text id="_IDGenText10" text="{dp}" wrapping="false" /> 
												</template>
											</Column>
											<Column
												id="pm"
												width="6rem" 
												sortProperty="pm">
												<m:Label id="_IDGenLabel11" text="品名" />
												<template>
													<m:Text id="_IDGenText11" text="{pm}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn4" width="6rem">
												<m:Label id="_IDGenLabel12" text="数量" />
												<template>
													<m:Text id="_IDGenText12" text="{sl}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn5" width="6rem">
												<m:Label id="_IDGenLabel13" text="単価" />
												<template>
													<m:Text id="_IDGenText13" text="{dj}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn6" width="6rem">
												<m:Label id="_IDGenLabel14" text="税抜金額" />
												<template>
													<m:Text id="_IDGenText14" text="{sbje}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn7" width="6rem">
												<m:Label id="_IDGenLabel15" text="消費税" />
												<template>
													<m:Text id="_IDGenText15" text="{xfs}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn8" width="6rem">
												<m:Label id="_IDGenLabel16" text="税込金額" />
												<template>
													<m:Text id="_IDGenText16" text="{srje}" wrapping="false" /> 
												</template>
											</Column>
										</columns>
									</Table>
								</m:content>

							</m:IconTabFilter>
							<m:IconTabFilter id="_IDGenIconTabFilter2"
								icon="sap-icon://attachment"
								key="attachments"
								count="0">
								<m:Text id="_IDGenText17" text="Attachments go here ..." />
							</m:IconTabFilter>
							<m:IconTabFilter id="_IDGenIconTabFilter3"
								icon="sap-icon://notes"
								key="notes" 
								>

								<m:Text id="_IDGenText18" text="承認コメント" class="sapUiTinyMarginTop"/>
								<m:TextArea id="_IDGenTextArea1" value="" growing="true" growingMaxLines="7"  width="100%"/>

							</m:IconTabFilter>

						</m:items>
					</m:IconTabBar>
					
					<semantic:positiveAction>
						<semantic:PositiveAction id="_IDGenPositiveAction1" text="承認" press="onSemanticButtonPress"/>
					</semantic:positiveAction>
					<semantic:negativeAction>
						<semantic:NegativeAction id="_IDGenNegativeAction1" text="却下" press="onSemanticButtonPress"/>
					</semantic:negativeAction>
					<semantic:customFooterContent>
					    <m:Button id="_IDGenButton1" text="差戻"/>
					</semantic:customFooterContent>

				</semantic:DetailPage>

			    <semantic:DetailPage
			        id="DetailPage2"
					title="購買発注承認">

					<form:SimpleForm id="_IDGenSimpleForm2" editable="true">
						<m:Label id="_IDGenLabel17" text="購買発注"/>
						<m:Text id="getProperty2"
							text="{/InputValue}XXXXXX"
						/>
					</form:SimpleForm>

					<m:IconTabBar
						id="idIconTabBarMulti2"
						expanded="{device>/isNoPhone}"
						class="sapUiResponsiveContentPadding">
						<m:items>
							<m:IconTabFilter id="_IDGenIconTabFilter4" icon="sap-icon://hint" key="info">
								<form:SimpleForm id="_IDGenSimpleForm3" editable="true">
									<m:Label id="_IDGenLabel18" text="基本データ"/>
									<m:Text id="jb" text="{/InputValue}" />

									<m:Label id="_IDGenLabel19" text="会社コード"/>
									<m:Text id="hscode" text="{/InputValue}" />

									<m:Label id="_IDGenLabel20" text="伝票タイプ"/>
									<m:Text id="cptype" text="{/InputValue}" />

									<m:Label id="_IDGenLabel21" text="購買組織"/>
									<m:Text id="gmzz" text="{/InputValue}" />

									<m:Label id="_IDGenLabel22" text="購買グループ"/>
									<m:Text id="gmgroup" text="{/InputValue}" />

									<m:Label id="_IDGenLabel23" text="仕入先"/>
									<m:Text id="srx2" text="{/InputValue}" />

									<m:Label id="_IDGenLabel24" text="通貨コード"/>
									<m:Text id="thcode" text="{/InputValue}" />

									<m:Label id="_IDGenLabel25" text="登録者"/>
									<m:Text id="dlz" text="{/InputValue}" />
								</form:SimpleForm>

								<m:content>
									<Table
										id="table3"
										selectionMode="MultiToggle"
										rows="{/ProductCollection}"
										visibleRowCount="7"
										showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
										enableColumnFreeze="{ui>/showFreezeMenuEntry}"
										enableCellFilter="{ui>/enableCellFilter}"
										columnSelect="onColumnSelect"
										cellContextmenu="onProductIdCellContextMenu"
										ariaLabelledBy="title">

										<extension>
											<m:OverflowToolbar id="_IDGenOverflowToolbar2" style="Clear">
												<m:Title id="title2" text="明細"/>
												<m:ToolbarSpacer id="_IDGenToolbarSpacer2"/>
											</m:OverflowToolbar>
										</extension>

										<columns>
											<Column
												id="mx2"
												width="3rem"
												sortProperty="mx"
												filterProperty="mx"
												showFilterMenuEntry="true"
												showSortMenuEntry="true">
												<m:Label id="_IDGenLabel26" text="明細" />
												<template>
													<m:Text id="_IDGenText19" text="{mx}" wrapping="false" />
												</template>
											</Column>
											<Column
												id="srx3"
												filterProperty="srx"
												sortProperty="srx"
												width="6rem">
												<m:Label id="_IDGenLabel27" text="勘定設定カテゴリー" />
												<template>
													<m:Text id="_IDGenText20" text="{srx}" wrapping="false" />
												</template>
											</Column>
											<Column
												id="dp2"
												width="6rem"
												columnMenuOpen="onColumnMenuOpen">
												<m:Label id="_IDGenLabel28" text="品目" />
												<template>
													<m:Text id="_IDGenText21" text="{dp}" wrapping="false" /> 
												</template>
											</Column>
											<Column
												id="pm2"
												width="6rem" 
												sortProperty="pm">
												<m:Label id="_IDGenLabel29" text="テキスト" />
												<template>
													<m:Text id="_IDGenText22" text="{pm}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn9" width="6rem">
												<m:Label id="_IDGenLabel30" text="数量" />
												<template>
													<m:Text id="_IDGenText23" text="{sl}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn10" width="3rem">
												<m:Label id="_IDGenLabel31" text="単位" />
												<template>
													<m:Text id="_IDGenText24" text="{dj}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn11" width="6rem">
												<m:Label id="_IDGenLabel32" text="単価" />
												<template>
													<m:Text id="_IDGenText25" text="{sbje}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn12" width="6rem">
												<m:Label id="_IDGenLabel33" text="品目グループ" />
												<template>
													<m:Text id="_IDGenText26" text="{xfs}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn13" width="6rem">
												<m:Label id="_IDGenLabel34" text="納入日付" />
												<template>
													<m:Text id="_IDGenText27" text="{srje}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn14" width="6rem">
												<m:Label id="_IDGenLabel35" text="保管場所" />
												<template>
													<m:Text id="_IDGenText28" text="{srje}" wrapping="false" /> 
												</template>
											</Column>
											<Column id="_IDGenColumn15" width="6rem">
												<m:Label id="_IDGenLabel36" text="プラント" />
												<template>
													<m:Text id="_IDGenText29" text="{srje}" wrapping="false" /> 
												</template>
											</Column>
										</columns>
									</Table>
								</m:content>

							</m:IconTabFilter>

							<m:IconTabFilter id="_IDGenIconTabFilter5"
								icon="sap-icon://notes"
								key="notes" 
								>

								<m:Text id="_IDGenText30" text="承認コメント" class="sapUiTinyMarginTop"/>
								<m:TextArea id="_IDGenTextArea2" value="" growing="true" growingMaxLines="7"  width="100%"/>

							</m:IconTabFilter>

						</m:items>
					</m:IconTabBar>

					<semantic:positiveAction>
						<semantic:PositiveAction id="_IDGenPositiveAction2" text="承認" press="onSemanticButtonPress"/>
					</semantic:positiveAction>
					<semantic:negativeAction>
						<semantic:NegativeAction id="_IDGenNegativeAction2" text="差戻" press="onSemanticButtonPress"/>
					</semantic:negativeAction>
				</semantic:DetailPage>
			</m:detailPages>
		</m:SplitApp>
</mvc:View>